{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger btrshop-cloud"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "List all products",
        "operationId": "listProduct",
        "tags": [
          "products"
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "How many items to return at one time (max 100)",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "ean",
            "in": "query",
            "description": "Ean query",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "An paged array of products",
            "headers": {
              "x-next": {
                "type": "string",
                "description": "A link to the next page of responses"
              }
            },
            "schema": {
              "$ref": "#/definitions/Products"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "post": {
        "summary": "Create a product",
        "operationId": "createProducts",
        "tags": [
          "products"
        ],
        "parameters" : [
          {
            "name" : "product",
            "in" : "body",
            "description" : "Product to be added",
            "required" : true,
            "schema" : {
              "$ref": "#/definitions/Product"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "product response",
            "schema" : {
              "$ref": "#/definitions/Product"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a product",
        "operationId": "deleteProducts",
        "tags": [
          "products"
        ],
        "parameters" : [
          {
            "name" : "ean",
            "in" : "query",
            "description" : "Ean of the product to delete",
            "required" : true,
            "type" : "string"
          }
        ],
        "responses": {
          "204": {
            "description": "product response",
            "schema" : {
              "$ref": "#/definitions/Product"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/products/{ean}": {
      "get": {
        "summary": "Info for a specific product",
        "operationId": "showProductByEan",
        "tags": [
          "products"
        ],
        "parameters": [
          {
            "name" : "ean",
            "in" : "path",
            "required" : true,
            "description": "The ean of the product to retrieve",
            "type": "string"
          }
        ],
        "reponses": {
          "200": {
            "description": "Excected response to a valid request",
            "schema" : {
              "$ref": "#/definitions/Product"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema" : {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Product": {
      "required": [
        "id",
        "name",
        "ean",
        "description",
        "category",
        "poids"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "ean": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "poids": {
          "type": "string"
        }
      }
    },
    "Products": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Product"
      }
    },
    "Error": {
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
